@model LjcWebApp.word_tb

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form asp-controller="Word" asp-action="Edit" method="post" class="form-horizontal">
    <fieldset>
        <legend>word_tb</legend>
        <div class="editor-label" style="display: none">
            <label asp-for="WordId"></label>
        </div>
        <div class="editor-field" style="display: none">
            <input type="text" asp-for="WordId" />
            <span asp-validation-for="WordId" class="text-danger"></span>
        </div>

        <div class="editor-label">
            <label asp-for="Spelling"></label>
        </div>
        <div class="editor-field">
            <textarea asp-for="Spelling" style="width: 340px;margin: 0 auto;"></textarea>
            <span asp-validation-for="Spelling" class="text-danger"></span>
        </div>

        <div class="editor-label">
            <label asp-for="Phonetic"></label>
        </div>
        <div class="editor-field">
            <textarea asp-for="Phonetic" style="width: 340px;margin: 0 auto;"></textarea>
            <span asp-validation-for="Phonetic" class="text-danger"></span>
        </div>

        <div class="editor-label">
            <label asp-for="Paraphrase"></label>
        </div>
        <div class="editor-field">
            <textarea asp-for="Paraphrase" style="width: 340px;margin: 0 auto;"></textarea>
            <span asp-validation-for="Paraphrase" class="text-danger"></span>
        </div>

        <div class="editor-label">
            <label asp-for="Classs"></label>
        </div>
        <div class="editor-field">
            <input type="text" asp-for="Classs" />
            <span asp-validation-for="Classs" class="text-danger"></span>
        </div>

        <p>
            <input type="submit" class="btn btn-default" value="Save" />
        </p>
    </fieldset>
</form>

<div>
    <a asp-controller="Default" asp-action="Index">Back</a>
</div>
