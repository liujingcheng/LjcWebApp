    function getNextQuestion(score) {
        $.post("/Introspect/GetNextQuestion", currentQuestion, function (data) {
            if (data == "end") {
                if (score != null && currentQuestion != null && currentQuestion.Score == null) {
                    //如果已经选了分数的，要将分数显示出来
                    currentQuestion.Score = score;
                    refresh();
                }
                alert("亲，已经是最后一个了~");
                return;
            }
            currentQuestion = $.evalJSON(data);
            refresh();
        });
    }

    function getPreviousQuestion() {
        $.post("/Introspect/GetPreviousQuestion", currentQuestion, function (data) {
            if (data == "end") {
                alert("亲，没有上一个了~");
                return;
            }
            currentQuestion = $.evalJSON(data);
            refresh();
        });
    }

    function refresh() {
        if (currentQuestion != null) {
            $("#lblQuestion").text(currentQuestion.QuestionMember);
            $("#lblSingleInfo").text(currentQuestion.Score + "/" + currentQuestion.Sort);
        } else {
            alert("操作失败");
            return;
        }
    }

    function getStatisticInfo() {
        $.post("/Introspect/GetStatisticInfo", null, function (data) {
            $("#lblSummaryInfo").text(data);
        });
    }

    function getPreviousUnhandledQuestion() {
        $.post("/Introspect/GetPreviousUnhandledQuestion", currentQuestion, function (data) {
            if (data == "end") {
                alert("亲，没有你想要的结果哦~");
                return;
            }
            currentQuestion = $.evalJSON(data);
            refresh();
        });
    }

</script>